<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Code of the project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @projects.each do |project| %>
    <tr>
        <td><%= project.code %></td>
        <td><%= link_to "Show this project", project, class: "btn btn-secondary" %>
        <td><%= link_to "Edit this project", edit_project_path(project), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this project", project, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New project", new_project_path, class: "btn btn-dark" %>
