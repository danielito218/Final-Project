<p style="color: green"><%= notice %></p>

<h1>Clients</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @clients.each do |client| %>
    <tr>
        <td><%= client.name %></td>
        <td><%= link_to "Show this client", client, class: "btn btn-secondary" %>
        <td><%= link_to "Edit this client", edit_client_path(client), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this client", client, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New client", new_client_path, class: "btn btn-dark" %>
