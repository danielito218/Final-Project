<p style="color: green"><%= notice %></p>

<h1>Clients <%= link_to "", new_client_path, class: "btn btn-outline-dark bi bi-file-plus-fill" %></h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @clients.each do |client| %>
    <tr>
        <td><%= client.name %></td>
        <td><%= link_to "", client, class: "btn btn-outline-dark bi bi-search" %>
        <td><%= link_to "", edit_client_path(client), class: "btn btn-outline-dark bi bi-pencil-square" %></td>
        <td><%= button_to "", client, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-outline-dark bi bi-trash3-fill" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


