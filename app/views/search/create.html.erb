<h1 class="display-5">Amount generated on every status for the timelapse</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the status</th>
      <th>Number of projects</th>
      <th>Total amount</th>
    </tr>
  </thead>

<tbody>
    <tr>
        <% @results.each do |result|%>
        <td><%= result.status.name %></td>
        <td><%= Project.project_counter(result.status_id) %></td>
        <td><%= Project.projects_amount(result.status_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>