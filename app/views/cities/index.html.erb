<p style="color: green"><%= notice %></p>

<h1>Cities <%= link_to "", new_city_path, class: "btn btn-outline-dark bi bi-file-plus-fill" %> </h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd; width:50%">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>State</th>
      <th>City</th>
      <th colspan="2"></th>
    </tr>
  </thead>

<tbody>
  <% @cities.sort_by{|p| p.state.name}.each do |city| %>
    <tr>
        <td><%= city.state.name %></td>
        <td><%= city.name %></td>
        <td><%= link_to "", edit_city_path(city), class: "btn btn-outline-dark bi bi-pencil-square" %></td>
        <td><%= button_to "", city, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-outline-dark bi bi-trash3-fill" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

