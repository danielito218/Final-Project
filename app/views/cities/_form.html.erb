<%= form_with(model: city) do |form| %>
  <% if city.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
        <% city.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name%>
  </div>

  <div class = "form-group">
     <%= form.label :state_id, style: "display: block", class:"form-label"%>

    <%
      options = []
      
      State.all.sort{|x,y| x[:name] <=> y[:name]}.each do |state|
        option = [state[:name],state[:id]]
        options.push(option)    
      end
    %>

    <%= form.select :state_id , options , class:"btn btn-secondary dropdown-toggle"%>
  </div>

<br/>
<%# if the city of the client didin't allow on the bata base, this link will go the create a new one %>
    <strong>Didn't find your state? </strong>
    <%=link_to "Create a new one", new_state_path%><br/>



  <div> 
    <%= form.submit%>
  </div>
<% end %>
