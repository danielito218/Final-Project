<p style="color: green"><%= notice %></p>

<h1>Statuses</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the status</th>
      <th>Number of projects</th>
      <th>Total amount</th>
    </tr>
  </thead>

<tbody>
  <% @statuses.each do |status| %>
    <tr>
        <td><%= status.name %></td>
        <td><%= Project.project_counter(status.id) %></td>
        <td><%= Project.projects_amount(status.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
