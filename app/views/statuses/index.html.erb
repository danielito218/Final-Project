<p style="color: green"><%= notice %></p>

<h1>Statuses</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @statuses.each do |status| %>
    <tr>
        <td><%= status.name %></td>
        <td><%= link_to "Show this status", status, class: "btn btn-secondary" %>
        <td><%= link_to "Edit this status", edit_status_path(status), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this status", @status, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New status", new_status_path, class: "btn btn-dark" %>