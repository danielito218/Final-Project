<p style="color: green"><%= notice %></p>

<h1>States</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @states.each do |state| %>
    <tr>
        <td><%= state.name %></td>
        <td><%= link_to "Edit this state", edit_state_path(state), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this state", state, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


