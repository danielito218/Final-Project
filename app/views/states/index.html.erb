<p style="color: green"><%= notice %></p>

<h1>States <%= link_to "", new_state_path, class: "btn btn-outline-dark bi bi-file-plus-fill" %> </h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @states.sort_by{|p| p.name}.each do |state| %>
    <tr>
        <td><%= state.name %></td>
        <td><%= link_to "", state, class: "btn btn-outline-dark bi bi-search" %>
        <td><%= link_to "", edit_state_path(state), class: "btn btn-outline-dark bi bi-pencil-square" %></td>
        <td><%= button_to "", state, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-outline-dark bi bi-trash3-fill" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


