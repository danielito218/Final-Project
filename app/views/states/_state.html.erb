<div id="<%= dom_id state %>">
<br/>

<h1 class="display-2"><%=state.name%></h1>


<ul class="list-group", style="width:50%">
  <li class="list-group-item active" aria-current="true" style="background-color: #3AAFA9;">
    <strong>Cities</strong><br/>
  </li>

  <% City.where(state_id: state.id).each do |city| %>
    <li class="list-group-item active" aria-current="true" style="background-color:#DEF2F1;">
    <%= link_to city.name, city, style:"color:black"%></p>
  </li>
  <% end %>

</ul>
<br>
</div>
