<p style="color: green"><%= notice %></p>

<h1>Cities</h1>

<table class="table table-striped table-hover table table-bordered" style="background-color: #e3f2fd;">
  <thead class="table" style="background-color: #3AAFA9;">
    <tr>
      <th>Name of the city</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @cities.each do |city| %>
    <tr>
        <td><%= city.name %></td>
        <td><%= link_to "Show this city", city, class: "btn btn-secondary" %>
        <td><%= link_to "Edit this city", edit_city_path(city), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this city", city, method: :delete, data: {cofirm: 'Are you sure?'}, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New city", new_city_path, class: "btn btn-dark" %>
